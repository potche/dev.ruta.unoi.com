{% extends '::base.html.twig' %}
{% block body %}

    <div id="page-content">

        <div class="content-header">
            <div class="header-section">
                <h1>
                    <i class="fa fa-line-chart"></i><b>{{ title }}</b><br><small><em>Evaluaciones</em></small>
                </h1>
            </div>
        </div>

        <div id="block-resumen" class="block">
            <div class="block-title">
                <div class="block-options pull-right">
                    <a href="javascript:void(0)" class="btn btn-info btn-sm btn-primary" data-toggle="block-toggle-content"><i class="fa fa-arrows-v"></i></a>
                </div>
                <h2><strong>Graficas</strong></h2>
                {% if schoolId is defined %}
                <form id="schoolFrm" action="{{ path('estadisticas')}}" method="GET">
                    <select id="schoolId" name="schoolId" class="form-control" size="1">
                        <option value="0">Por favor seleccione una escuela</option>
                        {% for school in schoolId %}
                            <li>
                                <option value='{{ school.schoolid|e }}' >{{ school.schoolid|e }} - {{ school.school|e }}</option>
                            </li>
                        {% endfor %}
                    </select>
                </form>
                {% endif %}
            </div>

            <div class="row">
                <div class="block-content">
                    <div class="col-sm-6">

                        <div id="pie" class="block">
                            <div id="container" style="height: 400px"></div>
                        </div>

                    </div>
                </div>
                <div class="block-content">
                    <div class="col-sm-6">
                        <div id="bars" class="block">
                            <div id="containerColumn" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="block-content">
                    <div class="col-sm-12">
                        <div  class="block">
                            <div class="block-title">
                                <h2><strong>Usuarios</strong> Evaluados</h2>
                            </div>
                            <div class="table-responsive">
                                <p>Estadisticas de usuarios que han realizado por lo menos una Evaluacion.</p>
                                <table id="userList-datatable" class="table table-vcenter table-condensed table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width: 150px;" class="text-center"><i class="fa fa-users"></i></th>
                                        <th>Nombre</th>
                                        <th style="width: 150px;" class="text-center">Progreso</th>
                                        <th style="width: 150px;" class="text-center">Avance</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for key,listUser in jsonListUser %}
                                        {% set porcen =  ( 100 - ( (listUser.surveysAsig|e - listUser.surveys|length|e) / listUser.surveysAsig|e ) * 100) |round(2, 'floor') %}
                                        <tr onclick="statsUser('{{ listUser.username|e }}', '{{porcen}}','{{ listUser.surveys|json_encode|e }}')" data-toggle="tooltip" title="Haz click para ver el detalle de {{ listUser.username|e }}">
                                            <td class="text-center">
                                                <img src="{{ asset('public/assets/images/login/icon_niño1.png') }}" alt="avatar" class="img-circle">
                                            </td>
                                            <td>
                                                {{ listUser.username|e }}
                                                <div class="progress progress-bar-info progress-bar-striped">
                                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{porcen}}" aria-valuemin="0" aria-valuemax="100" style="width: {{porcen}}%;">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                {{ listUser.surveys|length|e }}/{{ listUser.surveysAsig|e }}
                                            </td>
                                            <td class="text-center">
                                                {{porcen}} %
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    {% for listUserSinR in jsonListUserSinR %}
                                        <tr style="color: red">
                                            <td class="text-center">
                                                <img src="{{ asset('public/assets/images/login/triste.jpg') }}" alt="avatar" class="img-circle" width="50%">
                                            </td>
                                            <td>
                                                {{ listUserSinR|e }}
                                                <div class="progress progress-bar-info progress-bar-striped">
                                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                0/2
                                            </td>
                                            <td class="text-center">
                                                0 %
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="block-content">
                    <div class="col-sm-6">
                        <div id="bars" class="block">

                        </div>
                    </div>
                </div>
                <div class="block-content">
                    <div class="col-sm-6">
                        <div id="bars" class="block">

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Modal Stats User -->
    <div id="statsUser" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-hand-spock-o"></i> Estadisticas por <strong>Usuario</strong></h4>
                </div>
                <div class="modal-body">
                    <span id="bodyStatsUser"></span>

                    <div class="row text-center ">
                        <div class="block-content text-center">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div id="pie" class="block">
                                    <div id="containerPieLU" style="width:350px;"></div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div id="pie" class="block text-center">
                                    <div id="containerColumnLU" class="text-center" style="width: 350px"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row text-center ">
                        <div class="block-content text-center">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="block">
                                    <div class="block-title">
                                        <h2><strong>Usuarios</strong> Evaluados</h2>
                                    </div>
                                    <div class="table-responsive">
                                        <p>Estadisticas de usuarios que han realizado por lo menos una Evaluacion.</p>
                                        <table id="userEva-datatable" class="table table-vcenter table-condensed table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Pregunta</th>
                                                <th style="width: 150px;" class="text-center">Sí</th>
                                                <th style="width: 150px;" class="text-center">No</th>
                                                <th style="width: 150px;" class="text-center">No sé</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for key,listUser in jsonListUser %}
                                                {% set porcen =  ( 100 - ( (listUser.surveysAsig|e - listUser.surveys|length|e) / listUser.surveysAsig|e ) * 100) |round(2, 'floor') %}
                                                <tr onclick="statsUser('{{ listUser.username|e }}', '{{porcen}}','{{ listUser.surveys|json_encode|e }}')" data-toggle="tooltip" title="Haz click para ver el detalle de {{ listUser.username|e }}">
                                                    <td class="text-center">
                                                        <img src="{{ asset('public/assets/images/login/icon_niño1.png') }}" alt="avatar" class="img-circle">
                                                    </td>
                                                    <td>
                                                        {{ listUser.username|e }}
                                                        <div class="progress progress-bar-info progress-bar-striped">
                                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{porcen}}" aria-valuemin="0" aria-valuemax="100" style="width: {{porcen}}%;">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        {{ listUser.surveys|length|e }}/{{ listUser.surveysAsig|e }}
                                                    </td>
                                                    <td class="text-center">
                                                        {{porcen}} %
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            {% for listUserSinR in jsonListUserSinR %}
                                                <tr style="color: red">
                                                    <td class="text-center">
                                                        <img src="{{ asset('public/assets/images/login/triste.jpg') }}" alt="avatar" class="img-circle" width="50%">
                                                    </td>
                                                    <td>
                                                        {{ listUserSinR|e }}
                                                        <div class="progress progress-bar-info progress-bar-striped">
                                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        0/2
                                                    </td>
                                                    <td class="text-center">
                                                        0 %
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="block text-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- END Modal Stats User -->

    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!-- Load and execute javascript code used only in this page -->
    <script>
        var TablesDatatables = function() {

            return {
                init: function() {
                    /* Initialize Bootstrap Datatables Integration */
                    App.datatables();

                    /* Initialize Datatables */
                    $('#userList-datatable').dataTable({
                        columnDefs: [ { orderable: false, targets: [ 1, 3 ] } ],
                        pageLength: 5,
                        lengthMenu: [[5,10,15,20,25,30, -1], [5,10,15,20,25,30, 'All']]
                    });

                    /* Add placeholder attribute to the search input */
                    $('.dataTables_filter input').attr('placeholder', 'buscar');

                }
            };
        }();
    </script>
    <script>$(function(){ TablesDatatables.init(); });</script>

    <script src="{{ asset('public/assets/js/Highcharts/highcharts.js')}}"></script>
    <script src="{{ asset('public/assets/js/Highcharts/highcharts-3d.js')}}"></script>
    <script src="{{ asset('public/assets/js/Highcharts/modules/exporting.js')}}"></script>
    <script src="{{ asset('public/assets/js/Highcharts/modules/drilldown.js')}}"></script>
    <script src="{{ asset('public/assets/js/stats.js')}}"></script>
    <script type="text/javascript">

        $(function () {
            pieGrl({{ jsonTotalResponsePie | raw }});
            columnGrl({{ jsonTotalResponseColumn | raw }}, {{ jsonTotalResponseDDColumn | raw }});

            var a = {{ jsonListUser | json_encode | raw }};

            console.log(a[0]['surveys'][0]['eval']);

        });

    </script>
{% endblock %}