    <script>
        var schoolArrayG = [];
        var schoolListJS = {{ schoolList | raw }};
        var surveyListJS = {{ surveyList | raw }};
        var okSchool = true;
        var okSurvey = true;
        var nullSchool = false;
        var nullSurvey = false;


        $(function() {

            $('.input-typeaheadSchool').typeahead({ source: schoolListJS });
            $('.input-typeaheadSurvey').typeahead({ source: surveyListJS });

            $('#schooIdFrm').change(function(){
                var schooIdFrm = $('#schooIdFrm').val();
                if(schooIdFrm != '') {
                    if (schoolListJS.indexOf(schooIdFrm) != -1) {
                        $('#mensajeSchool').hide('fast');
                        okSchool = true;
                        nullSchool = true;
                        showErrorBuscar(okSchool, okSurvey, nullSchool, nullSurvey);
                    } else {
                        $('#errorBuscar').show('fast');
                        $('#mensajeSchool').show('fast');
                        $("#buscar").prop('disabled', true);
                        okSchool = false;
                        nullSchool = false;
                    }
                }else{
                    $('#mensajeSchool').hide('fast');
                    okSchool = true;
                    nullSchool = false;
                    showErrorBuscar(okSchool, okSurvey, nullSchool, nullSurvey);
                }
            });

            $('#surveyIdFrm').change(function() {
                var surveyIdFrm = $('#surveyIdFrm').val();
                if(surveyIdFrm != ''){
                    if (surveyListJS.indexOf($('#surveyIdFrm').val()) != -1) {
                        $('#mensajeSurvey').hide('fast');
                        okSurvey = true;
                        nullSurvey = true;
                        showErrorBuscar(okSchool, okSurvey, nullSchool, nullSurvey);
                    }else{
                        $('#errorBuscar').show('fast');
                        $('#mensajeSurvey').show('fast');
                        $("#buscar").prop('disabled', true);
                        okSurvey = false;
                        nullSurvey = false;
                    }
                }else{
                    $('#mensajeSurvey').hide('fast');
                    okSurvey = true;
                    nullSchool = false;
                    showErrorBuscar(okSchool, okSurvey, nullSchool, nullSurvey);
                }
            });

            /*
                        var schoolAPI = "{{ app.request.getBaseURL() }}/api/v0/catalog/schools";
            $.getJSON( schoolAPI,
                function() {
                //console.log( a);
            }).done(function( data ) {
                        return data;
                    });
*/

        });

        function showErrorBuscar(okSchool, okSurvey, nullSchool, nullSurvey){
            if( okSchool && okSurvey ){
                $('#errorBuscar').hide('fast');
                if(nullSchool || nullSurvey){
                    $("#buscar").prop('disabled', false);
                }else {
                    $("#buscar").prop('disabled', true);
                }
            }
        }

    </script>

{% endblock %}