{% extends 'base.html.twig' %}
{% block body %}

    <div class="content-header content-header-media">
        <div class="header-section" style="height: 185px;">
            <h1>
                <i class="fa fa-bookmark-o" onclick="showVideo();"></i>
                Bienvenid@, <strong>{{ app.session.get('nameS') }}</strong>
                <br/><small>a la Plataforma de Diagnóstico Institucional de UNO Internacional</small>
            </h1>
        </div>
        <!-- For best results use an image with a resolution of 2560x248 pixels (You can also use a blurred image with ratio 10:1 - eg: 1000x100 pixels - it will adjust and look great!) -->
        <img src="{{ asset('public/assets/images/listar/camino2.png') }}" alt="header image" class="animation-pulseSlow" style="height: 180px; width: auto;">
    </div>
    <!-- END Dashboard Header -->

    <!-- Dashboard Header -->
    <div class="content-header">
        <ul class="nav-horizontal text-center">
            <div id="menuInicio"></div>
        </ul>
    </div>
    <!-- END Dashboard Header -->

    <!-- Form Example with Blocks in the Grid -->
    <div class="row">
        <div class="col-sm-6">
            <!-- Video -->
            {% if global != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Nivel general de progreso" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ global| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ global| raw }}%</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}

            {% if colegio != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Nivel de avance en mi colegio" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ colegio| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ colegio| raw }}%</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}

            <!-- END Video -->
        </div>
        <div class="col-sm-6">
            <!-- Video -->
            {% if personal != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Nivel personal de progreso" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ personal['global']['Stats'][0]["y"]| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ personal['global']['Stats'][0]["y"]| raw }}%</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <!-- Video -->
            {% if colegios != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Colegios registrados en la plataforma" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ colegios| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ colegios| raw }}</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
        <div class="col-sm-6">
            <!-- Video -->
            {% if coaches != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Coaches registrados en el sistema" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ coaches[0]['cuenta']| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ coaches[0]['cuenta']| raw }}</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <!-- Video -->
            {% if personas != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Personas registradas en la plataforma" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ personas['total']| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ personas['total']| raw }}</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
        <div class="col-sm-4">
            <!-- Video -->
            {% if personas != null  %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Personas que han atendido alguna evaluación" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ personas['answered']| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ personas['answered']| raw }}</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
        <div class="col-sm-4">
            <!-- Video -->
            {% if personas != null %}
                <div class="block">
                    <!-- Title -->
                    <div class="block-title">
                        <h2>{{ "Personas que no han atendido alguna evaluación" }}</h2>
                    </div>
                    <div class="widget-extra-full text-center">
                        <div class="pie-chart" data-percent="{{ personas['pending']| raw }}" data-size="90" data-bar-color="#e67e22">
                            <span>{{ personas['pending']| raw }}</span>
                        </div>
                        <br/>
                    </div>
                </div>
            {% endif %}
            <!-- END Video -->
        </div>
    </div>
    <!-- END Form Example with Blocks in the Grid -->
    <!-- Modal Video -->
    <div id="videoWellcome" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-commenting"></i> Bienvenid@ <strong>{{ app.session.get('nameS') }}</strong></h4>
                </div>
                <div class="modal-body">
                    <h1>aqui podria ir un video....</h1>
                    <!-- <iframe id="player" style="width:90%; height:235px; margin: 5% 5%" src="https://www.youtube.com/embed/LYkudoUb51E" frameborder="0" allowfullscreen></iframe> -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- END Modal Video -->

    <script src="{{ asset('public/assets/js/jquery-1.11.3.min.js') }}"></script>
{% endblock %}