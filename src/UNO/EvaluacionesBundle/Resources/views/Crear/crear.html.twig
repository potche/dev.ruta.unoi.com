{% extends '::base.html.twig' %}
{% block body %}
    <div id="page-content">
        <div class="content-header">
            <div class="header-section">
                <h1>
                    <i class="fa fa-list-ul" style="color: #CCC;"></i><b>Crear</b> evaluación
                </h1>
                <br>
                <p>
                    <i class="fa fa-info-circle"></i> <em>Sigue estos 3 sencillos pasos para crear una nueva evaluación</em>
                </p>
            </div>
        </div>

        <div class="block">
            <form id="advanced-wizard" action="{{ path('save') }}" method="post" class="form-horizontal form-bordered">

                <div id="advanced-first" class="step">

                    <div class="wizard-steps">
                        <div class="row">
                            <div class="col-xs-4 active" style="font-size: 40px">
                                <span >1</span>
                            </div>
                            <div class="col-xs-4" style="font-size: 40px">
                                <span>2</span>
                            </div>
                            <div class="col-xs-4" style="font-size: 40px">
                                <span>3</span>
                            </div>
                        </div>
                    </div>

                    <div class="block">
                        <div class="block-title themed-background">
                            <h4 style="color: #ffffff;"><strong>1. Agrega los datos de la nueva evaluación</strong></h4>
                        </div>
                        <div class="row">
                            <div class="block-content">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="eval[title]">Título <span class="text-danger">*</span></label>
                                    <div class="col-md-6">
                                        <input type="text" id="eval[title]" name="eval[title]" class="form-control" placeholder="Título de la nueva evaluación ..." required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="eval[description]">Descripción</label>
                                    <div class="col-md-6">
                                        <textarea id="eval[description]" name="eval[description]" rows="6" class="form-control" placeholder="Ingresa una descripción o instrucciones para esta evaluación ..."></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="eval[closingdate]">Fecha de cierre <span class="text-danger">*</span></label>
                                    <div class="col-md-6">
                                        <input id="eval[closingdate]" name="eval[closingdate]" class="form-control input-datepicker-close" data-date-format="yyyy-mm-dd" placeholder="yyyy-mm-dd" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div id="advanced-second" class="step">

                    <div class="wizard-steps">
                        <div class="row">
                            <div class="col-xs-4 done" style="font-size: 40px">
                                <span >1</span>
                            </div>
                            <div class="col-xs-4 active" style="font-size: 40px">
                                <span>2</span>
                            </div>
                            <div class="col-xs-4" style="font-size: 40px">
                                <span>3</span>
                            </div>
                        </div>
                    </div>

                    <div class="block">
                        <div class="block-title themed-background">
                            <h4 style="color: #ffffff;"><strong>2. Agrega los tipos de usuario que responderán esta evaluación</strong></h4>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">
                                <a id="btn_all_profiles" class="btn btn-sm btn-success has-tip" data-tooltip aria-haspopup="true" data-options="disable_for_touch:true"  title="Agrega todos los perfiles y niveles existentes para responder esta evaluación">
                                    <i class="fa fa-plus-circle"></i> Agregar a todos
                                </a>
                                <a id="btn_borrar_perfiles" class="btn btn-sm btn-danger has-tip" data-tooltip aria-haspopup="true" data-options="disable_for_touch:true"  title="Borra todos los perfiles que has asignado hasta el momento">
                                    <i class="fa fa-minus-circle"></i> Borrar todo
                                </a>
                            </div>
                        </div>
                        <br>
                        <div class="row hidden-xs">
                            <div class="col-sm-4">
                                <label for="select-perfil">Selecciona un perfil</label>
                            </div>
                            <div class="col-sm-4">
                                <label for="select-nivel">Selecciona un nivel</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="block-content">
                                <div id = "div-perfiles" class="col-sm-4">
                                    <select aria-hidden="true" tabindex="-1" id="select-perfil" name="select-perfil" class="select-select2 select2-hidden-accessible" style="width: 100%;" data-placeholder="Selecciona un perfil...">
                                        <option></option>
                                        {% for profile in profiles %}
                                                <option value="{{ profile.profileid }}">{{ profile.profile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div id = "div-niveles" class="col-sm-4">
                                    <select aria-hidden="true" tabindex="-1" id="select-nivel" name="select-nivel" class="select-select2 select2-hidden-accessible" style="width: 100%;" data-placeholder="Selecciona un nivel...">
                                        <option></option>
                                        {% for level in levels %}
                                            <option value="{{ level.schoollevelid }}">{{ level.schoollevel }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <a id="btn_add_profile" class="btn btn-sm btn-success has-tip" data-tooltip aria-haspopup="true" data-options="disable_for_touch:true"  title="Cuando hayas seleccionado un Perfil con Nivel, haz click en Agregar">
                                        <i class="fa fa-plus"></i> Agregar
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div id="perf-niv-agregados" class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-12 control-label" for="count_profiles"></label>
                                    <div class="col-sm-12">
                                        <input type="text" id="count_profiles" name="count_profiles" class="form-control" style="display:none;" value="0">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div id="advanced-third" class="step">

                    <div class="wizard-steps">
                        <div class="row">
                            <div class="col-xs-4 done" style="font-size: 40px">
                                <span>1</span>
                            </div>
                            <div class="col-xs-4 done" style="font-size: 40px">
                                <span>2</span>
                            </div>
                            <div class="col-xs-4 active" style="font-size: 40px">
                                <span>3</span>
                            </div>
                        </div>
                    </div>

                    <div class="block">

                        <div class="block-title themed-background">
                            <h4 style="color: #ffffff;"><strong>3. Agrega las preguntas para esta nueva evaluación</strong></h4>
                        </div>
                        <div class="row hidden-xs">
                            <div class="col-sm-6">
                                <label for="pregunta">Selecciona o escribe una pregunta</label>
                            </div>
                            <div class="col-sm-4">
                                <label for="div-categoria">Selecciona una categoría para esta pregunta</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="block-content">
                                <div id = "div-agrega-pregunta" class="col-sm-6">
                                    <input id="pregunta" name="pregunta" class="form-control input-typeahead" autocomplete="on" placeholder="Escribe una pregunta..." type="text">
                                </div>

                                <div id = "div-categoria" class="col-sm-4">
                                    <select aria-hidden="true" tabindex="-1" id="select-categoria" name="select-categoria" class="select-select2 select2-hidden-accessible" style="width: 100%;" data-placeholder="Categoría..">
                                        <option></option><!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                        {% for cat in categories %}
                                            <option value="{{ cat.subcategoryid }}">{{ cat.subcategory }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <a id="btn_add_pregunta" class="btn btn-sm btn-success has-tip" data-tooltip aria-haspopup="true" data-options="disable_for_touch:true"  title="Cuando hayas escrito una pregunta y seleccionado una categoría, haz click en Agregar">
                                        <i class="fa fa-plus"></i> Agregar
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row draggable-blocks">
                            <div id = "div-preg-agregadas" class="col-sm-12 column">
                                <div class="form-group">
                                    <label class="col-sm-12 control-label" for="count_questions"></label>
                                    <div class="col-sm-12">
                                        <input type="text" id="count_questions" name="count_questions" class="form-control" style="display:none;" value="0">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <br>
                        </div>

                    </div>
                </div>

                <div class="form-group form-actions">
                    <div class="col-lg-12" style="text-align: center">
                        <input type="reset" class="btn btn-sm btn-info" id="back2" value="Atras">
                        <input type="submit" class="btn btn-sm btn-info" id="next2" value="Siguiente" data-toggle="modal" data-target="#create_confirm">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="create_confirm" class="modal fade in" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-info-circle"></i> Confirmar</h4>
                </div>
                <div class="modal-body">
                    <p><b>Está a punto de crear una nueva evaluación, para confirmar presione Aceptar</b></p>
                    <br>
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>Título</th>
                                <td id="title"></td>
                            </tr>
                            <tr>
                                <th>Finaliza</th>
                                <td id="closedate"></td>
                            </tr>
                        </table>
                    </div>
                    <br>
                    <p><b>Aplicable a</b></p>
                    <div class="table-responsive">
                        <table id="preview-perfiles" class="table table-vcenter table-condensed table-bordered table-responsive">
                            <thead>
                            <tr>
                                <th class="text-center">{{ 'Perfil' }}</th>
                                <th class="text-center">{{ 'Niveles' }}</th>
                            </tr>
                            </thead>
                            <tbody id="preview-perfniv">
                            </tbody>
                        </table>
                    </div>
                    <br>
                    <small class="visible-xs"><i class="fa fa-info-circle text-primary"></i> Puedes navegar horizontalmente para ver las demás columnas</small>
                    <br>
                    <div class="table-responsive">
                        <table class="table table-vcenter table-condensed table-bordered">
                            <thead>
                            <tr>
                                <th style="text-align: center;">Reactivos</th>
                            </tr>
                            </thead>
                            <tbody id="questions"></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
                    <a href="#" id="confirmar" class="btn btn-success success">Aceptar</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="{{ asset('public/assets/js/create_wizard.js') }}"></script>
    <script src="{{ asset('public/assets/js/uiDraggable.js') }}"></script>
    <script>$(function(){ UiDraggable.init(); });</script>
    <script>$(function(){ CrearWizard.init({{ questions|json_encode()|raw }}); });</script>

{% endblock %}